program calculadora;

{$APPTYPE CONSOLE}
{$R *.res}

uses
  System.SysUtils;

var
  A, B: real;
  C: Char;

begin

  Write('Insira um úmero:    ');
  Readln(A);
  Write('Insira um operador: ');
  Readln(C);
  Write('Insira um úmero:    ');
  Readln(B);

  case ORD(C) of
    ORD('+'): Writeln((A+B):2:2);
    ORD('-'): Writeln((A-B):2:2);
  end;
  Read;
end.
